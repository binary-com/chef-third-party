[loggers]
keys=<%= (@loggers.keys).join(',') %>

[formatters]
keys=<%= @formatters.keys.join(',') %>

[handlers]
keys=<%= @handlers.keys.join(',') %>

## LOGGERS ##

<% @loggers.each do |section, options| %>
[logger_<%= section %>]
<% options.each do |key, value| %>
<%= key %>=<%= value %>
<% end %>

<% end %>

## FORMATTERS ##

<% @formatters.each do |section, options| %>
[formatter_<%= section %>]
<% options.each do |key, value| %>
<%= key %>=<%= value %>
<% end %>

<% end %>

## HANDLERS ##

<% @handlers.each do |section, options| %>
[handler_<%= section %>]
<% options.each do |key, value| %>
<%= key %>=<%= value %>
<% end %>

<% end %>
