<IfModule mod_userdir.c>
  UserDir public_html
  UserDir disabled root

  <Directory <%= @public_html_dir %>>
    AllowOverride <%= @allow_override %>
    Options <%= @options %>
    <Limit GET POST OPTIONS>
	Require all granted
    </Limit>
    <LimitExcept GET POST OPTIONS>
	Require all denied
    </LimitExcept>
  </Directory>
</IfModule>
