clouds:
  <%= @cloud_name %>:
    auth:
      username: <%= @user %>
      user_domain_name: <%= @user_domain_name %>
      password: <%= @password %>
      project_name: <%= @project %>
      project_domain_name: <%= @project_domain_name %>
      auth_url: <%= @identity_endpoint %>
    identity_api_version: 3
    region_name: <%= node['openstack']['region'] %>
